<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="14" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sgswit.fx.controller.iTunes.GiftCardBalanceCheckController">
    <children>
        <HBox spacing="14">
            <children>
                <TitledPane HBox.hgrow="ALWAYS" alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="165.0" prefWidth="410.0" text="操作">
                    <content>
                        <GridPane fx:id="outer" prefHeight="140.0" prefWidth="402.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="102.0"
                                                   prefWidth="102.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="320.0" minWidth="10.0"
                                                   prefWidth="285.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="95.0" minHeight="10.0" prefHeight="95.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button fx:id="executeButton" mnemonicParsing="false" onAction="#executeButtonAction"
                                        prefHeight="60.0" prefWidth="100.0" text="开始执行" textFill="#238142">
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                    <GridPane.margin>
                                        <Insets right="2.0"/>
                                    </GridPane.margin>
                                </Button>
                                <GridPane alignment="CENTER" prefHeight="95.0" prefWidth="250.0"
                                          GridPane.columnIndex="1">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0"
                                                           prefWidth="130.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0"
                                                           prefWidth="130.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Button fx:id="importAccountButton" mnemonicParsing="false"
                                                onAction="#onAccountInputBtnClick" prefWidth="120.0" text="导入卡号">
                                            <GridPane.margin>
                                                <Insets left="5.0"/>
                                            </GridPane.margin>
                                        </Button>
                                        <Button fx:id="accountClearBtn" mnemonicParsing="false"
                                                onAction="#clearAccountListButtonAction" prefWidth="120.0"
                                                text="清空列表" GridPane.columnIndex="1">
                                            <GridPane.margin>
                                                <Insets left="15.0"/>
                                            </GridPane.margin>
                                        </Button>
                                        <Button fx:id="areaQueryLogBtn" mnemonicParsing="false"
                                                onAction="#localHistoryButtonAction" prefWidth="120.0" text="本地记录"
                                                textAlignment="CENTER" GridPane.rowIndex="1">
                                            <GridPane.margin>
                                                <Insets left="5.0"/>
                                            </GridPane.margin>
                                        </Button>
                                        <Button fx:id="accountExportBtn" mnemonicParsing="false"
                                                onAction="#exportExcelButtonAction" prefWidth="120.0" text="导出Excel"
                                                GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <GridPane.margin>
                                                <Insets left="15.0"/>
                                            </GridPane.margin>
                                        </Button>
                                        <Button fx:id="stopButton" mnemonicParsing="false"
                                                onAction="#stopTaskButtonAction" prefWidth="120.0" text="停止任务"
                                                GridPane.rowIndex="2">
                                            <GridPane.margin>
                                                <Insets left="5.0"/>
                                            </GridPane.margin>
                                        </Button>
                                    </children>
                                </GridPane>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>
                <TitledPane HBox.hgrow="ALWAYS" animated="false" prefHeight="165.0" prefWidth="530.0" text="">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="141.0" prefWidth="508.0">
                            <children>
                                <Label layoutX="21.0" layoutY="40.0" text="Apple ID"/>
                                <HBox layoutX="14.0" layoutY="82.0" prefHeight="25.0" prefWidth="192.0">
                                    <children>
                                        <Label text="礼品卡地区">
                                            <HBox.margin>
                                                <Insets top="3.0"/>
                                            </HBox.margin>
                                        </Label>
                                        <ComboBox fx:id="countryBox" maxHeight="150.0" prefWidth="100.0">
                                            <HBox.margin>
                                                <Insets left="12.0"/>
                                            </HBox.margin>
                                        </ComboBox>
                                    </children>
                                </HBox>
                                <TextField fx:id="account_pwd" layoutX="87.0" layoutY="36.0" prefHeight="23.0"
                                           prefWidth="231.0" promptText="账号格式:账号----密码"/>
                                <Button fx:id="loginBtn" layoutX="369.0" layoutY="36.0" mnemonicParsing="false"
                                        onAction="#onClickLoginBtn" text="登录并初始化"/>
                                <Label fx:id="alertMessage" alignment="CENTER" contentDisplay="CENTER" layoutX="280.0"
                                       layoutY="85.0" prefWidth="240.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </TitledPane>
                <TitledPane HBox.hgrow="ALWAYS" fx:id="accNum" prefHeight="165.0" prefWidth="115.0" text="操作说明">
                    <content>
                        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                              prefHeight="141.0" prefWidth="115.0">
                            <children>
                                <HBox prefHeight="30.0" prefWidth="340.0">
                                    <Label text="账号总数：" wrapText="true">
                                        <VBox.margin>
                                            <Insets bottom="3.0" top="2.0"/>
                                        </VBox.margin>
                                    </Label>
                                    <Label fx:id="accountNumLabel" text="0"/>
                                </HBox>
                                <HBox prefHeight="30.0" prefWidth="340.0">
                                    <Label text="成功数：" wrapText="true">
                                        <VBox.margin>
                                            <Insets bottom="3.0" top="2.0"/>
                                        </VBox.margin>
                                    </Label>
                                    <Label fx:id="successNumLabel" text="0"/>
                                </HBox>
                                <HBox prefHeight="30.0" prefWidth="340.0">
                                    <Label text="失败数：" wrapText="true">
                                        <VBox.margin>
                                            <Insets bottom="3.0" top="2.0"/>
                                        </VBox.margin>
                                    </Label>
                                    <Label fx:id="failNumLabel" text="0"/>
                                </HBox>
                                <HBox prefHeight="35.0" prefWidth="340.0">
                                    <children>
                                        <Label prefHeight="25.0" prefWidth="70.0" text="消耗点：">
                                            <HBox.margin>
                                                <Insets top="5.0"/>
                                            </HBox.margin>
                                        </Label>
                                        <Label fx:id="pointLabel" prefHeight="25.0" prefWidth="20.0" text="80"
                                               textFill="RED">
                                            <font>
                                                <Font name="System Bold" size="16.0"/>
                                            </font>
                                            <HBox.margin>
                                                <Insets top="5.0"/>
                                            </HBox.margin>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
            </children>
        </HBox>
        <TitledPane text="账号列表">
            <content>
                <TableView fx:id="accountTableView" onContextMenuRequested="#onContentMenuClick" prefHeight="364.0"
                           prefWidth="1066.0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="seq" maxWidth="60" minWidth="60" prefWidth="60" text="序号"/>
                        <TableColumn fx:id="giftCardCode" prefWidth="204.99998474121094" text="礼品卡"/>
                        <TableColumn fx:id="giftCardNumber" prefWidth="132.0" text="PIN码尾号"/>
                        <TableColumn fx:id="balance" prefWidth="144.0" text="卡内余额"/>
                        <TableColumn fx:id="logTime" prefWidth="167.0" text="查询时间"/>
                        <TableColumn fx:id="note" prefWidth="341.0" minWidth="341.0" text="执行信息"/>
                    </columns>
                </TableView>
            </content>
        </TitledPane>
    </children>
</VBox>
