<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sgswit.fx.controller.operation.AccountInfoModifyController">
    <children>
        <!--上下布局。上面功能区，下面表格，设置内边距14px-->
        <VBox style="-fx-padding: 14 14 14 14;-fx-spacing: 14;">
            <children>
                <!--功能区-->
                <HBox style="-fx-spacing: 14">
                    <children>
                        <!--操作-->
                        <TitledPane animated="false" collapsible="false" contentDisplay="CENTER" prefHeight="165" prefWidth="380" text="操作">
                            <content>
                                <GridPane prefHeight="140" prefWidth="400">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" minWidth="130" prefWidth="130" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="320" minWidth="10" prefWidth="270" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints maxHeight="35" minHeight="10" prefHeight="20" vgrow="SOMETIMES" />
                                        <RowConstraints maxHeight="95" minHeight="10" prefHeight="95" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <!--列表总数-->
                                        <HBox prefHeight="30" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="列表中账户数量：      " />
                                                <Label fx:id="accountNumLable" textFill="#e20404" />
                                            </children>
                                        </HBox>

                                        <!--开始执行-->
                                        <Button fx:id="executeButton" mnemonicParsing="false" onAction="#executeButtonAction" prefHeight="60" prefWidth="100" text="开始执行" textFill="#238142" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                            <font>
                                                <Font name="System Bold" size="15" />
                                            </font>
                                        </Button>

                                        <!--操作按钮-->
                                        <GridPane alignment="CENTER" prefHeight="95" prefWidth="290" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" minWidth="10" prefWidth="130" />
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" minWidth="10" prefWidth="130" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints />
                                            </rowConstraints>
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#importAccountButtonAction" prefWidth="100" text="导入账号" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                                <Button mnemonicParsing="false" onAction="#clearAccountListButtonAction" prefWidth="100" text="清空列表" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                                <Button mnemonicParsing="false" onAction="#localHistoryButtonAction" prefWidth="100" text="本地记录" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                <Button mnemonicParsing="false" onAction="#exportExcelButtonAction" prefWidth="100" text="导出Excel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                <Button mnemonicParsing="false" onAction="#stopTaskButtonAction" prefWidth="100" text="停止任务" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                            </children>
                                        </GridPane>

                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <!--修改资料-->
                        <TitledPane animated="false" collapsible="false" prefHeight="165" prefWidth="790" text="修改资料">
                            <content>
                                <GridPane alignment="CENTER_LEFT" style="-fx-hgap: 10; -fx-vgap: 10">
                                    <children>
                                        <!--修改资料-->
                                        <CheckBox fx:id="updatePwdCheckBox" text="修改密码" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <CheckBox fx:id="updateBirthdayCheckBox" text="修改生日" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                        <CheckBox fx:id="updateNameCheckBox" text="修改姓名" GridPane.columnIndex="0" GridPane.rowIndex="2" />

                                        <!--新资料-->
                                        <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="新密码" /><TextField fx:id="pwdTextField" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <children>
                                                <Label text="新生日" /><DatePicker fx:id="birthdayDatePicker" prefWidth="162" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                            <children>
                                                <Label text="姓" /><TextField fx:id="lastNameTextField" prefWidth="88" />
                                                <Label text="名" /><TextField fx:id="firstNameTextField" prefWidth="88" />
                                            </children>
                                        </HBox>

                                        <!--修改密保-->
                                        <CheckBox fx:id="updatePasswordProtectionCheckBox" text="修改密保" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                        <CheckBox fx:id="removeDeviceCheckBox" text="删除设备" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                        <HBox GridPane.columnIndex="2" GridPane.rowIndex="2">
                                            <children>
                                                <ChoiceBox fx:id="nameGenerationTypeChoiceBox" prefWidth="80">
                                                    <items>
                                                        <FXCollections fx:factory="observableArrayList">
                                                            <String fx:value="固定姓名" />
                                                            <String fx:value="随机中文" />
                                                            <String fx:value="随机英文" />
                                                        </FXCollections>
                                                    </items>
                                                </ChoiceBox>
                                            </children>
                                        </HBox>

                                        <!--密保问题-->
                                        <HBox alignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="新问题1" /><ChoiceBox fx:id="question1ChoiceBox" prefWidth="80" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="1">
                                            <children>
                                                <Label text="新问题2" /><ChoiceBox fx:id="question2ChoiceBox" prefWidth="80" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="2">
                                            <children>
                                                <Label text="新问题3" /><ChoiceBox fx:id="question3ChoiceBox" prefWidth="80" />
                                            </children>
                                        </HBox>

                                        <!--密保答案-->
                                        <HBox alignment="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="新答案1" /><TextField fx:id="answer1TextField" prefWidth="80" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="1">
                                            <children>
                                                <Label text="新答案2" /><TextField fx:id="answer2TextField" prefWidth="80" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="2">
                                            <children>
                                                <Label text="新答案3" /><TextField fx:id="answer3TextField" prefWidth="80" />
                                            </children>
                                        </HBox>

                                        <!--邮箱,语言-->
                                        <CheckBox fx:id="removeRescueEmailCheckBox" text="移除救援邮箱" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                                        <CheckBox fx:id="updateShowLangCheckBox" text="修改显示语言" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                                        <HBox GridPane.columnIndex="5" GridPane.rowIndex="2">
                                            <children>
                                                <ChoiceBox fx:id="updateShowLangChoiceBox" prefWidth="80" />
                                            </children>
                                        </HBox>


                                    </children>
                           <columnConstraints>
                              <ColumnConstraints />
                              <ColumnConstraints />
                              <ColumnConstraints />
                              <ColumnConstraints />
                              <ColumnConstraints />
                              <ColumnConstraints />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>

                            </content>
                        </TitledPane>

                        <!--执行结果-->
                        <TitledPane animated="false" collapsible="false" prefHeight="165" prefWidth="110" text="执行结果">
                            <content>
                                <VBox alignment="CENTER_LEFT" style="-fx-padding: 14 14 14 14;-fx-spacing: 14">
                                    <Label text="账号总数：--" />
                                    <Label text="成功数：--" />
                                    <Label text="失败数：--" />
                                    <Label text="消耗点数：30" />
                                </VBox>
                            </content>
                        </TitledPane>
                    </children>
                </HBox>

                <!--账号列表-->
                <TitledPane animated="false" collapsible="false" text="账号列表">
                    <content>
                        <TableView fx:id="accountTableView" onContextMenuRequested="#onContentMenuClick" prefHeight="400.0">
                            <columns>
                                <TableColumn fx:id="seq" text="序号" />
                                <TableColumn fx:id="account" prefWidth="130" text="账号" />
                                <TableColumn fx:id="pwd" prefWidth="130" text="密码" />
                                <TableColumn fx:id="answer1" prefWidth="100" text="答案1" />
                                <TableColumn fx:id="answer2" prefWidth="100" text="答案2" />
                                <TableColumn fx:id="answer3" prefWidth="100" text="答案3" />
                                <TableColumn fx:id="birthday" prefWidth="80" text="生日" />
                                <TableColumn fx:id="area" prefWidth="75" text="国家" />
                                <TableColumn fx:id="name" prefWidth="100" text="姓名" />
                                <TableColumn fx:id="status" prefWidth="75" text="状态" />
                                <TableColumn fx:id="note" prefWidth="230" text="执行信息" />
                            </columns>
                        </TableView>
                    </content>
                </TitledPane>

            </children>
        </VBox>
    </children>
</AnchorPane>
