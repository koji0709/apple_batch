<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:controller="com.sgswit.fx.controller.operation.AccountInfoModifyController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!--上下布局。上面功能区，下面表格，设置内边距13px-->
        <VBox style="-fx-padding: 13 13 13 13;-fx-spacing: 13">
            <children>
                <!--功能区-->
                <HBox style="-fx-spacing: 13">
                    <children>
                        <!--操作-->
                        <TitledPane text="操作" prefWidth="400" prefHeight="165" contentDisplay="CENTER" collapsible="false" animated="false">
                            <content>
                                <GridPane prefWidth="400" prefHeight="140" >
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" minWidth="130" prefWidth="130"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="320" minWidth="10" prefWidth="270"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints maxHeight="35" minHeight="10" prefHeight="20" vgrow="SOMETIMES"/>
                                        <RowConstraints maxHeight="95" minHeight="10" prefHeight="95" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <!--列表总数-->
                                        <HBox GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200" prefHeight="30">
                                            <children>
                                                <Label text="列表中账户数量：      "/>
                                                <Label fx:id="accountNumLable" textFill="#e20404"/>
                                            </children>
                                        </HBox>

                                        <!--开始执行-->
                                        <Button text="开始执行" onAction="#executeButtonAction" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                                prefWidth="100" prefHeight="60" mnemonicParsing="false" textFill="#238142">
                                            <font>
                                                <Font name="System Bold" size="15"/>
                                            </font>
                                        </Button>

                                        <!--操作按钮-->
                                        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="290" prefHeight="95" alignment="CENTER">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" minWidth="10"
                                                                   prefWidth="130"/>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" minWidth="10"
                                                                   prefWidth="130"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Button text="导入账号" onAction="#importAccountButtonAction"
                                                        GridPane.rowIndex="0" GridPane.columnIndex="0"
                                                        prefWidth="100" mnemonicParsing="false"/>
                                                <Button text="清空列表" onAction="#clearAccountListButtonAction"
                                                        GridPane.rowIndex="0" GridPane.columnIndex="1"
                                                        prefWidth="100" mnemonicParsing="false" />
                                                <Button text="本地记录" onAction="#localHistoryButtonAction"
                                                        GridPane.rowIndex="1" GridPane.columnIndex="0"
                                                        prefWidth="100" mnemonicParsing="false"/>
                                                <Button text="导出Excel" onAction="#exportExcelButtonAction"
                                                        GridPane.rowIndex="1" GridPane.columnIndex="1"
                                                        prefWidth="100" mnemonicParsing="false"/>
                                                <Button text="停止任务" onAction="#stopTaskButtonAction"
                                                        GridPane.rowIndex="2" GridPane.columnIndex="0"
                                                        prefWidth="100" mnemonicParsing="false"/>
                                            </children>
                                        </GridPane>

                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <!--异常重试-->
                        <TitledPane text="异常重试" prefWidth="130" prefHeight="165" collapsible="false" animated="false">
                            <content>
                                <FlowPane alignment="CENTER_LEFT">
                                    <children>
                                        <CheckBox fx:id="tryAgainCheckBox" text="修改失败继续" selected="true"/>
                                        <Label textFill="#169BD5" text="发生未知错误自动重新执行" />
                                    </children>
                                </FlowPane>
                            </content>
                        </TitledPane>

                        <!--修改资料-->
                        <TitledPane text="修改资料" prefWidth="780" prefHeight="165" collapsible="false" animated="false">
                            <content>
                                <VBox>
                                    <children>
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>

                    </children>
                </HBox>

                <!--账号列表-->
                <TitledPane text="账号列表" collapsible="false" animated="false">
                    <content>
                        <TableView fx:id="tableViewDataList" prefHeight="364">
                            <columns>
                                <TableColumn fx:id="seq" text="序号"/>
                                <TableColumn fx:id="account" text="账号"/>
                                <TableColumn fx:id="pwd" prefWidth="120" text="密码"/>
                                <TableColumn fx:id="answer1" prefWidth="80" text="问题1"/>
                                <TableColumn fx:id="answer2" prefWidth="80" text="问题2"/>
                                <TableColumn fx:id="answer3" prefWidth="80" text="问题3"/>
                                <TableColumn fx:id="state" text="国家"/>
                                <TableColumn fx:id="aera" prefWidth="75" text="区域"/>
                                <TableColumn fx:id="name" prefWidth="100" text="名称"/>
                                <TableColumn fx:id="status" prefWidth="75" text="状态"/>
                                <TableColumn fx:id="note" prefWidth="180" text="信息"/>
                            </columns>
                        </TableView>
                    </content>
                </TitledPane>

            </children>
        </VBox>
    </children>
</AnchorPane>
