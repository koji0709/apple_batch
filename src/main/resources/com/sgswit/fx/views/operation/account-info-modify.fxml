<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.*?>
<?import java.lang.String?>

<AnchorPane fx:controller="com.sgswit.fx.controller.operation.AccountInfoModifyController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!--上下布局。上面功能区，下面表格，设置内边距14px-->
        <VBox style="-fx-padding: 14 14 14 14;-fx-spacing: 14">
            <children>
                <!--功能区-->
                <HBox style="-fx-spacing: 14">
                    <children>
                        <!--操作-->
                        <TitledPane text="操作" prefWidth="380" prefHeight="165" contentDisplay="CENTER" collapsible="false" animated="false">
                            <content>
                                <GridPane prefWidth="400" prefHeight="140" >
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" minWidth="130" prefWidth="130"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="320" minWidth="10" prefWidth="270"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints maxHeight="35" minHeight="10" prefHeight="20" vgrow="SOMETIMES"/>
                                        <RowConstraints maxHeight="95" minHeight="10" prefHeight="95" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <!--列表总数-->
                                        <HBox GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200" prefHeight="30">
                                            <children>
                                                <Label text="列表中账户数量：      "/>
                                                <Label fx:id="accountNumLable" textFill="#e20404"/>
                                            </children>
                                        </HBox>

                                        <!--开始执行-->
                                        <Button text="开始执行" onAction="#executeButtonAction" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                                prefWidth="100" prefHeight="60" mnemonicParsing="false" textFill="#238142">
                                            <font>
                                                <Font name="System Bold" size="15"/>
                                            </font>
                                        </Button>

                                        <!--操作按钮-->
                                        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="290" prefHeight="95" alignment="CENTER">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" minWidth="10"
                                                                   prefWidth="130"/>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" minWidth="10"
                                                                   prefWidth="130"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Button text="导入账号" onAction="#importAccountButtonAction"
                                                        GridPane.rowIndex="0" GridPane.columnIndex="0"
                                                        prefWidth="100" mnemonicParsing="false"/>
                                                <Button text="清空列表" onAction="#clearAccountListButtonAction"
                                                        GridPane.rowIndex="0" GridPane.columnIndex="1"
                                                        prefWidth="100" mnemonicParsing="false" />
                                                <Button text="本地记录" onAction="#localHistoryButtonAction"
                                                        GridPane.rowIndex="1" GridPane.columnIndex="0"
                                                        prefWidth="100" mnemonicParsing="false"/>
                                                <Button text="导出Excel" onAction="#exportExcelButtonAction"
                                                        GridPane.rowIndex="1" GridPane.columnIndex="1"
                                                        prefWidth="100" mnemonicParsing="false"/>
                                                <Button text="停止任务" onAction="#stopTaskButtonAction"
                                                        GridPane.rowIndex="2" GridPane.columnIndex="0"
                                                        prefWidth="100" mnemonicParsing="false"/>
                                            </children>
                                        </GridPane>

                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <!--配置信息-->
                        <TitledPane text="配置信息" prefWidth="180" prefHeight="165" collapsible="false" animated="false">
                            <content>
                                <VBox alignment="CENTER_LEFT" style="-fx-padding: 14 5 14 5;-fx-spacing: 14">
                                    <children>
                                        <CheckBox fx:id="tryAgainCheckBox" text="修改失败继续" selected="true"/>
                                        <Label textFill="#169BD5" text="发生未知错误自动重新执行" />
                                        <CheckBox fx:id="randomIPProxyCheckBox" text="使用随机IP代理" selected="true"/>
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>

                        <!--修改资料-->
                        <TitledPane text="修改资料" prefWidth="790" prefHeight="165" collapsible="false" animated="false" >
                            <content>
                                <GridPane alignment="CENTER_LEFT" style="-fx-hgap: 10; -fx-vgap: 10">
                                    <children>
                                        <!--修改资料-->
                                        <CheckBox fx:id="updatePwdCheckBox" text="修改密码" selected="true" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                        <CheckBox fx:id="updateBirthdayCheckBox" text="修改生日" selected="true" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                        <CheckBox fx:id="updateNameCheckBox" text="修改姓名" selected="true" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

                                        <!--新资料-->
                                        <HBox alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1" >
                                            <children>
                                                <Label text="新密码"/><TextField fx:id="pwdTextField"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1">
                                            <children>
                                                <Label text="新生日" /><TextField fx:id="birthdayTextField"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="1">
                                            <children>
                                                <Label text="姓" /><TextField fx:id="lastNameTextField" prefWidth="88"/>
                                                <Label text="名" /><TextField fx:id="firstNameTextField" prefWidth="88"/>
                                            </children>
                                        </HBox>

                                        <!--修改密保-->
                                        <CheckBox text="修改密保" fx:id="passwordProtectionCheckBox" selected="true" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                                        <CheckBox text="删除设备" fx:id="removeDeviceCheckBox" selected="true" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                                        <HBox GridPane.rowIndex="2" GridPane.columnIndex="2">
                                            <children>
                                                <ChoiceBox fx:id="nameGenerationTypeChoiceBox" prefWidth="80">
                                                    <items>
                                                        <FXCollections fx:factory="observableArrayList">
                                                            <String fx:value="固定姓名"/>
                                                            <String fx:value="随机中文"/>
                                                            <String fx:value="随机英文"/>
                                                        </FXCollections>
                                                    </items>
                                                </ChoiceBox>
                                            </children>
                                        </HBox>

                                        <!--密保问题-->
                                        <HBox alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="3" >
                                            <children>
                                                <Label text="新问题1"/><ChoiceBox fx:id="question1ChoiceBox" prefWidth="80"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="3">
                                            <children>
                                                <Label text="新问题2" /><ChoiceBox fx:id="question2ChoiceBox" prefWidth="80"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="3">
                                            <children>
                                                <Label text="新问题3" /><ChoiceBox fx:id="question3ChoiceBox" prefWidth="80"/>
                                            </children>
                                        </HBox>

                                        <!--密保答案-->
                                        <HBox alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="4" >
                                            <children>
                                                <Label text="新答案1"/><TextField fx:id="answer1TextField" prefWidth="80"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="4">
                                            <children>
                                                <Label text="新答案2" /><TextField fx:id="answer2TextField" prefWidth="80"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="4">
                                            <children>
                                                <Label text="新答案3" /><TextField fx:id="answer3TextField" prefWidth="80"/>
                                            </children>
                                        </HBox>

                                        <!--邮箱,语言-->
                                        <CheckBox fx:id="removeRescueEmailCheckBox" text="移除救援邮箱" selected="true" GridPane.rowIndex="0" GridPane.columnIndex="5"/>
                                        <CheckBox fx:id="updateShowLangCheckBox" text="修改显示语言" selected="true" GridPane.rowIndex="1" GridPane.columnIndex="5"/>
                                        <HBox GridPane.rowIndex="2" GridPane.columnIndex="5">
                                            <children>
                                                <ChoiceBox fx:id="showLangChoiceBox" prefWidth="80"/>
                                            </children>
                                        </HBox>


                                    </children>
                                </GridPane>

                            </content>
                        </TitledPane>

                        <!--执行结果-->
                        <TitledPane text="执行结果" prefWidth="110" prefHeight="165" collapsible="false" animated="false">
                            <content>
                                <VBox alignment="CENTER_LEFT" style="-fx-padding: 14 14 14 14;-fx-spacing: 14">
                                    <Label text="账号总数：--"/>
                                    <Label text="成功数：--"/>
                                    <Label text="失败数：--"/>
                                    <Label text="消耗点数：30"/>
                                </VBox>
                            </content>
                        </TitledPane>
                    </children>
                </HBox>

                <!--账号列表-->
                <TitledPane text="账号列表" collapsible="false" animated="false">
                    <content>
                        <TableView fx:id="tableViewDataList" prefWidth="1500" prefHeight="500">
                            <columns>
                                <TableColumn fx:id="seq" text="序号"/>
                                <TableColumn fx:id="account" text="账号"/>
                                <TableColumn fx:id="pwd" prefWidth="120" text="密码"/>
                                <TableColumn fx:id="answer1" prefWidth="80" text="答案1"/>
                                <TableColumn fx:id="answer2" prefWidth="80" text="答案2"/>
                                <TableColumn fx:id="answer3" prefWidth="80" text="答案3"/>
                                <TableColumn fx:id="birthday" prefWidth="80" text="生日"/>
                                <TableColumn fx:id="aera" prefWidth="75" text="国家"/>
                                <TableColumn fx:id="state" prefWidth="75" text="地区"/>
                                <TableColumn fx:id="name" prefWidth="100" text="姓名"/>
                                <TableColumn fx:id="status" prefWidth="75" text="状态"/>
                                <TableColumn fx:id="note" prefWidth="180" text="信息"/>
                            </columns>
                        </TableView>
                    </content>
                </TitledPane>

            </children>
        </VBox>
    </children>
</AnchorPane>
